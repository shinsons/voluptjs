{
	"rules": {
		"no-console": 0,
    "indent": [
      "error",
      2
    ],
		"quotes": [
			2,
			"single"
		],
		"linebreak-style": [
			2,
			"unix"
		],
		"semi": [
			2,
			"always"
	  ],
    "no-unused-vars": [
      "error",
      { "argsIgnorePattern": "next" }
    ]
	},
	"env": {
		"es6": true,
		"node": true,
    "mocha": true
	},
  "parserOptions": {
    "ecmaVersion": 2018
  },
	"extends": "eslint:recommended"
}
